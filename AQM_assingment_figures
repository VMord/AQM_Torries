summary(ind_reg)




#Making the draws and the clustered covariance for the monte carlo method

coef_est_jobs <- coef(jobs_reg)
vcov_est_jobs <- vcov(jobs_reg)
draw_jobs <- mvrnorm(10000, coef_est_jobs, vcov_est_jobs)

calculate_diff_and_significance <- function(draw, var1, var2) {
  quant <- draw[,var1] - draw[,var2]
  diff <- mean(quant)
  quantdiff <- quantile(quant, c(0.005, 0.025, 0.05, 0.95, 0.975, 0.995))
  sig <- ifelse((sign(quantdiff)[3] == sign(quantdiff)[4]), "·", "")
  sig <- ifelse((sign(quantdiff)[2] == sign(quantdiff)[5]), "*", sig)
  sig <- ifelse((sign(quantdiff)[1] == sign(quantdiff)[6]), "**", sig)
  
  list(out = sprintf("%.3f", diff), sig = sig)
}


# Making a lot of models

#Panel a 
pairs_a <- list(
  c("beforejob.job_director.1000.1", "beforejob.job_director.1000.2"),
  c("I(job_director.1000 > 0)", "beforejob.job_director.1000.1"),
  c("afterjob.job_director.1000.1", "I(job_director.1000 > 0)"),
  c("afterjob.job_director.1000.2", "afterjob.job_director.1000.1"))


output_8a <- purrr::map(pairs_a, ~calculate_diff_and_significance(draw_jobs, .x[1], .x[2])) %>%
  reduce(~list(out = rbind(.x$out, .y$out), sig = rbind(.x$sig, .y$sig))) %>%
  {tibble(out = .[[1]], sig = .[[2]])} %>%
  mutate(combined = paste0(out, sig))

