#### FIGURE 7 ####

### Defining the function for the sign in the panels ###

calculate_diff_and_significance <- function(draw, var1, var2) {
  quant <- draw[,var1] - draw[,var2]
  diff <- mean(quant)
  quantdiff <- quantile(quant, c(0.005, 0.025, 0.05, 0.95, 0.975, 0.995))
  
  sig <- ifelse((sign(quantdiff)[3] == sign(quantdiff)[4]), "·", "")
  sig <- ifelse((sign(quantdiff)[2] == sign(quantdiff)[5]), "*", sig)
  sig <- ifelse((sign(quantdiff)[1] == sign(quantdiff)[6]), "**", sig)
  
  list(out = sprintf("%.3f", diff), sig = sig)
}

#Setting the pairs for later use
pairs <- list(
  c("beforejob.1", "beforejob.2"),
  c("bin.1000", "beforejob.1"),
  c("afterjob.1", "bin.1000"),
  c("afterjob.2", "afterjob.1"))





## Panel A ##

f7a_reg <- feols(rebel~ beforejob.2 + beforejob.1 + bin.1000 + afterjob.1 + afterjob.2 + minister + minister.state + undersec + frontbench.team + com.chair + com.member + enter + leave | year + id, cluster = ~ id, data=data[data$con==1,])

coef_est_a <- coef(f7a_reg)
vcov_est_a <- vcov(f7a_reg)
draw <- mvrnorm(10000, coef_est_a, vcov_est_a)

output_7a <- purrr::map(pairs, ~calculate_diff_and_significance(draw, .x[1], .x[2])) %>%
  reduce(~list(out = rbind(.x$out, .y$out), sig = rbind(.x$sig, .y$sig))) %>%
  {tibble(out = .[[1]], sig = .[[2]])} %>%
  mutate(combined = paste0(out, sig))

d7_a <- data.frame(param = c("-2", "-1", "in Job", "1", "2"),
                  low = c(f7a_reg$coefficients[1:5] - (f7a_reg$se[1:5]*1.96)),
                  est = c(f7a_reg$coefficients[1:5]),
                  high = c(f7a_reg$coefficients[1:5] + (f7a_reg$se[1:5]*1.96)))

d7_a_f <- ggplot(d7_a, aes(x = factor(param, level = c("-2", "-1", "in Job", "1", "2")), y=est)) + 
  geom_hline(yintercept = 0, color="grey", alpha = 0.5) +
  geom_vline(xintercept = c(2.5, 3.5), color = "grey", linetype = 5) +
  geom_pointrange(aes(ymax = high, ymin = low), color = "black", linewidth = 1) + 
  scale_x_discrete(breaks = c("-2", "-1", "in Job", "1", "2")) +
  scale_y_continuous(limits = c(-0.007, 0.004), breaks = c(-0.006, -0.004, -0.002, 0.000, 0.002)) +
  labs(x ="", y = "Coefficient", caption = "(a) Vote Rebellion") +
  geom_text(aes(label = paste(output_7a$combined[1])), x = 1.5, y = -0.007) +
  geom_text(aes(label = paste(output_7a$combined[2])), x = 2.5, y = -0.007) +
  geom_text(aes(label = paste(output_7a$combined[3])), x = 3.5, y = -0.007) +
  geom_text(aes(label = paste(output_7a$combined[4])), x = 4.5, y = -0.007) +
  theme_minimal() +
  theme(panel.grid.minor = element_blank(), panel.grid.major = element_blank(),
        axis.line.x = element_line(color="grey", size = 0.5),
        axis.title.x = element_text(size = 10), 
        axis.text.x =  element_text(size = 8),
        axis.line.y = element_line(color="grey", size = 0.5),
        axis.text.y = element_text(size = 10, angle = 0),
        plot.caption = element_text(color = "black", size = 10, hjust = 0.5)) 
## Panel B ##

f7b_reg <- feols(present ~ beforejob.2 + beforejob.1 + bin.1000 + afterjob.1 + afterjob.2 + minister + minister.state + undersec + frontbench.team + com.chair + com.member + enter + leave | year + id, cluster = ~ id, data=data[data$con==1 & data$dist.tercile.con == 3,])


coef_est_b <- coef(f7b_reg)
vcov_est_b <- vcov(f7b_reg)
draw <- mvrnorm(10000, coef_est_b, vcov_est_b)


output_7b <- purrr::map(pairs, ~calculate_diff_and_significance(draw, .x[1], .x[2])) %>%
  reduce(~list(out = rbind(.x$out, .y$out), sig = rbind(.x$sig, .y$sig))) %>%
  {tibble(out = .[[1]], sig = .[[2]])} %>%
  mutate(combined = paste0(out, sig))


d7_b <- data.frame(param = c("-2", "-1", "in Job", "1", "2"),
                  low = c(f7b_reg$coefficients[1:5] - (f7b_reg$se[1:5]*1.96)),
                  est = c(f7b_reg$coefficients[1:5]),
                  high = c(f7b_reg$coefficients[1:5] + (f7b_reg$se[1:5]*1.96)))

