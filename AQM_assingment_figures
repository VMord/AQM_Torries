coef_est_ind <- coef(ind_reg)
vcov_est_ind <- ind_reg$robustvcv
draw_ind <- mvrnorm(10000, coef_est_ind, vcov_est_ind)

calculate_diff_and_significance_ind <- function(var1, var2) {
  quant <- draw_ind[,var1] - draw_ind[,var2]
  diff <- mean(quant)
  pval <- 2*pnorm(-abs(mean(quant)/sd(quant)))
  sig <- ifelse(pval<=0.1, "·", "")		
  sig <- ifelse(pval<=0.05, "*", sig)		
  sig <- ifelse(pval<=0.01, "**", sig)
  list(out = sprintf("%.3f", diff), sig = sig)
}




